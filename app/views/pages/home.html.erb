<div class="home-container">
    <div class="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1519340241574-2cec6aef0c01?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2848&q=80);">
      <h1> <strong>PliSiTol</strong> </h1>
      <p>Quels programmes pour divertir vos enfants ?</p>
      <%= link_to "see more", programs_path, class: " btn-green" %>
    </div>

  <div class="home-form">
  <%= simple_form_for :request, url: programs_path, method: :get do |f| %>
    <%= f.input :description, placeholder: "Quel programme recherchez-vous ?", label: false %>
    <%= f.input :category, collection: Program::CATEGORY, label: "Catégorie" %>
    <%= f.input :min_age, collection: Program::AGE, label: "Âge" %>
    <%= f.input :length, collection: Program::LENGTH, label: "Durée" %>
    <%= f.button :submit, "Recherche", class: "btn-search" %>
  <% end %>

  </div>

</div>
